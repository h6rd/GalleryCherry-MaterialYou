<resources>

    <style name="TextButton">
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white_opacity_87</item>
        <item name="android:textStyle">bold</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="HentoidButtonOutlinedStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/secondary_color_selector_check</item>
        <item name="android:textColor">@color/secondary_text_color_selector_check</item>
        <item name="iconTint">@color/secondary_text_color_selector_check</item>
    </style>

    <style name="HentoidMaterialButtonOutlinedStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/secondary_color_selector</item>
        <item name="android:textColor">@color/secondary_text_color_selector</item>
        <item name="iconTint">@color/secondary_text_color_selector</item>
        <item name="rippleColor">?colorSecondary</item>
    </style>

    <style name="SearchCategoryButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_search_card</item>
    </style>

    <style name="Chip">
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_chip</item>
    </style>

    <style name="Chip.Choice">
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="Badge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/bg_badge</item>
        <item name="android:textColor">@color/black_opacity_87</item>
    </style>

    <style name="PinPlaceholder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">48dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:visibility">invisible</item>
        <item name="android:src">@drawable/ic_circle</item>
    </style>

    <style name="PlaceholderUnderline">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="NumpadItem">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <style name="NumpadDigits" parent="NumpadItem">
        <item name="android:background">@drawable/selector_button_circle</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextShadowLight">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="TextShadowMedium">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/taupe_elevated_3</item>
    </style>

    <style name="App.Slider" parent="@style/Widget.Material3.Slider">
        <item name="labelStyle">@style/App.Tooltip</item>
    </style>

    <style name="App.Tooltip" parent="Widget.Material3.Tooltip">
        <!-- background color of the Tooltip -->
        <item name="backgroundTint">@color/dark_gray</item>
        <!-- textAppearance of the Tooltip -->
        <item name="android:textAppearance">@style/TextAppearance.App.Tooltip</item>
    </style>

    <style name="TextAppearance.App.Tooltip" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white_opacity_87</item>
    </style>

    <!-- Dialog button -->
    <style name="Widget.App.DialogButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">?colorSecondary</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/white_opacity_87</item>
    </style>
</resources>
